{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env.local",
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        {
            "name": "Pytest: All tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-q",
                "tests"
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env.local",
            "python": "${workspaceFolder}/.venv/bin/python"
        }
    ]
}